{
  "presets": ["next/babel"],
  "plugins": [
    [
      "styled-components",
      {
        "ssr": true
      }
    ],
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "@modules": "./modules",
          "@components": "./components",
          "@styleguide": "./styleguide"
        }
      }
    ]
  ]
}
